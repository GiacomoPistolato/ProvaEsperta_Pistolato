<!-- Banner dei cookie -->
<div id="cookie-banner" class="w-full bg-white border-t border-gray-300 shadow-md py-4 px-6">
    <div class="max-w-6xl mx-auto">
        <!-- Titolo del banner -->
        <h3 class="text-lg font-semibold mb-2"><%= titolo_cookie %></h3>
        
        <!-- Descrizione e link per modificare le impostazioni -->
        <p class="text-sm text-gray-600 mb-4">
            Utilizziamo cookie propri e di terze parti per offrirti il miglior servizio possibile, analizzare l'utilizzo della nostra piattaforma e fornirti annunci personalizzati. Puoi modificare le impostazioni in qualsiasi momento 
            <a href="#" class="text-[#b32e2b] underline">qui</a>.
        </p>

        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            <!-- Informazione sul provider di gestione consenso -->
            <p class="text-xs text-gray-400 whitespace-nowrap">
                Powered by Usercentrics Consent Management
            </p>

            <!-- Azioni utente: info, rifiuta, accetta -->
            <div class="flex items-center gap-36">
                <!-- Link per ulteriori informazioni -->
                <a href="#" class="text-md text-[#0c3261] font-bold hover:underline">Ulteriori informazioni</a>
                <!-- Pulsante per rifiutare i cookie -->
                <span id="cookie-reject" class="text-md text-[#b32e2b] cursor-pointer font-bold hover:underline">Rifiuta</span>
                <!-- Pulsante per accettare tutti i cookie -->
                <button id="cookie-accept" class="px-4 py-2 bg-[#0c3261] text-white rounded-full font-bold cursor-pointer hover:bg-[#0c32619f] text-md">
                    Accetta tutti
                </button>
            </div>
        </div>
    </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var banner = document.getElementById('cookie-banner');
    var accept = document.getElementById('cookie-accept');
    var reject = document.getElementById('cookie-reject');
    if (accept) {
      accept.addEventListener('click', function() {
        banner.style.display = 'none';
      });
    }
    if (reject) {
      reject.addEventListener('click', function() {
        banner.style.display = 'none';
      });
    }
  });
</script>

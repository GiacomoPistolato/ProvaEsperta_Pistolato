<!-- app/views/layouts/_footer.html.erb -->
<footer class="bg-[#1D1D1D] text-white py-10">
  <div class="container mx-auto px-4">
    <!-- Logo -->
    <div class="mb-6 ml-0 md:ml-21 text-center md:text-left">
      <img src="<%= logo_path %>" alt="Glovo Logo" class="h-20 mx-auto md:mx-0">
    </div>

    <div class="flex flex-col md:flex-row md:justify-around">
      <!-- Uniamo le forze -->
      <div class="mb-6 md:mb-0 text-center md:text-left">
        <h3 class="text-lg font-bold mb-4"><%= uniamo_le_forze[:title] %></h3>
        <ul>
          <% uniamo_le_forze[:links].each do |link| %>
            <li class="mb-2"><a href="<%= link[:url] %>" class="text-white hover:underline"><%= link[:text] %></a></li>
          <% end %>
        </ul>
      </div>

      <!-- Link di interesse -->
      <div class="mb-6 md:mb-0 text-center md:text-left">
        <h3 class="text-lg font-bold mb-4"><%= link_di_interesse[:title] %></h3>
        <ul>
          <% link_di_interesse[:links].each do |link| %>
            <li class="mb-2"><a href="<%= link[:url] %>" class="text-white hover:underline"><%= link[:text] %></a></li>
          <% end %>
        </ul>
      </div>

      <!-- Seguici -->
      <div class="mb-6 md:mb-0 text-center md:text-left">
        <h3 class="text-lg font-bold mb-4"><%= seguici[:title] %></h3>
        <ul>
          <% seguici[:links].each do |link| %>
            <li class="mb-2"><a href="<%= link[:url] %>" class="text-white hover:underline"><%= link[:text] %></a></li>
          <% end %>
        </ul>
      </div>

      <!-- App Store and Google Play links -->
      <div class="mb-6 md:mb-0 text-center md:text-left">
        <div class="mb-4">
          <a href="<%= app_store_link %>" class="block mb-4">
            <img src="<%= app_store_image %>" alt="Download on the App Store" class="h-10 mx-auto md:mx-0">
          </a>
          <a href="<%= google_play_link %>" class="block">
            <img src="<%= google_play_image %>" alt="Get it on Google Play" class="h-10 mx-auto md:mx-0">
          </a>
        </div>
        <ul>
          <% additional_links.each do |link| %>
            <li class="mb-2"><a href="<%= link[:url] %>" class="text-white hover:underline"><%= link[:text] %></a></li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- Language selector -->
    <div class="mt-10 text-center">
      <select class="bg-[#1D1D1D] text-white border border-gray-600 rounded px-4 py-2">
        <% languages.each do |language| %>
          <option><%= language %></option>
        <% end %>
      </select>
    </div>
  </div>
</footer>
